@import "__constrants/variables.styl"
body
  position: relative
  left: 0
  transition: 1s ease
  overflow-x: hidden

.menu
  position: fixed
  left: -(width_menu)
  transition: 1s ease
  width: width_menu
  height: 100%

.menu a
  display: block
  padding: 10px 20px
  text-decoration none
.button
  &.nav
    background-image url("data:image/png;base64,")
    background-size cover
    position fixed
    display block
    padding: 5px
    width 30px
    height 30px
    & img 
      width 90%
.body-push
  left: width_menu

.menu-push
  left: 0

@media (min-width: 768px)
  .menu
    position: relative
    left: 0
    width: 100%

  .menu a
    display: inline-block

  .button
    display: none
    position: fixed